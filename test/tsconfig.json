{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "noEmit": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["../src/*"]
    }
  }
}
